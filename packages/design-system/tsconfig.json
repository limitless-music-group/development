{
  "extends": "@packages/typescript-config/nextjs.json",
  "compilerOptions": {
    "baseUrl": ".",
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@packages/*": [
        "../*"
      ],
      "@packages/design-system/*": [
        "./*"
      ]
    },
    "strictNullChecks": true
  },
  "include": [
    "**/*.ts",
    "**/*.tsx",
    "../shared/lib/date-utils.ts",
    "../auth/components/org-switcher.tsx",
    "../auth/components/register-form.tsx",
    "../auth/components/sign-out-button.tsx",
    "../auth/components/user-menu.tsx",
    "../auth/components/login-form.tsx"
  ],
  "exclude": [
    "node_modules"
  ]
}